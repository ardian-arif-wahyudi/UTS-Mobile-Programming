<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/telur_asin"
    tools:context=".HomeActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/welcome"
        android:layout_width="152dp"
        android:layout_height="162dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="44dp"
        android:src="@drawable/welcome"
        app:layout_constraintBottom_toTopOf="@id/ardian"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ardian"
        android:layout_width="152dp"
        android:layout_height="162dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/foto"
        app:layout_constraintBottom_toTopOf="@id/biodata"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/biodata"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Ardian Arif Wahyudi\n32602000069"
        android:textAlignment="center"
        android:textSize="28sp"
        android:lineSpacingExtra="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>